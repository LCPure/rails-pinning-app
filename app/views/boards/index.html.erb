<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<div class="table-responsive">
<table class="table table-bordered table-inverse ">
  <thead>
    <tr>
      <th>Board Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.user.full_name %></td>
        <td><%= link_to 'Show', board %></td>
		<% if board.user == current_user %>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="table-responsive">
<table class="table table-bordered table-inverse ">
  <thead>
    <tr>
      <th>Pinnable Boards</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
   <% if !current_user.pinnable_boards.nil? %>
    <% current_user.pinnable_boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
	  </tr>
    <% end %>
	<% end %>
  </tbody>
 </table>
 </div>


