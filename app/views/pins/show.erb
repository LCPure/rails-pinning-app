<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
     
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-home"></i>
  Back to Home
</a>

<% if !@errors.nil? %>
          <div class="error">
           <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
            <ul>
              <% @errors.full_messages.each do |msg| %>
              <li><%= "{msg}" %></li>
             <% end %>
           </ul>
         </div>
       <% end %>
