<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
  <h2>This pin has been pinned by</h2>
</div>

  <% if @users %>
  <% @users.each do |user| %>
    <h5><%= user.first_name %> <%= user.last_name %></h5>
  <% end %>
<% else %>
  <h5> No one clicked the repin button! </h5>
<% end %>

<br>
   <%= render partial: "shared/repin_form", locals: {pin: @pin} %> 
<br>

<% if !@pin.image.url.nil? %>
  <img src="<%= @pin.image.url(:medium) %>">
  <% end %>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
     
  </p>
  <%= link_to repin_path(@pin), class: "btn btn-primary", 
            method: "post" do %>
            <i class="fa fa-map-pin"></i>
            Repin!
 <% end %>  
  
</div>
<br/>
<a href="/">
  <i class="fa fa-home"></i>
  Back to Home
</a>

 


 


