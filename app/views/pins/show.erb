<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<br>
<br>
<% if !@pin.image.url.nil? %>
  <img src="<%= @pin.image.url(:medium) %>">
  <% end %>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
     
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-home"></i>
  Back to Home
</a>

 <%= link_to repin_path(pin), class: <button type="button class="btn btn-primary">Repin</button, 
     method: "post" do %>
     <i class="fa fa-map-pin" aria-hidden="true"></i>
     Repin!
<% end %>  



 


